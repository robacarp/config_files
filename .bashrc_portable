echo -e "\tAliasing"
alias ls="ls -la"
alias md="mkdir"

echo -e "\tDefining Functions"
cs () { cd $1; ls; }

PS1='\h:\W \u\$ '

name=`uname`
case $name in
  'Darwin')
    echo -e "\tOSX aliasing"
    alias mvim="open /Applications/MacVim.app $1"
  ;;
  'Linux')
    echo -e "\tNo Linux specific aliases"
  ;;
  *)
    echo 'Unknown'
  ;;
esac

go () {
 case "$1" in
    home)
      server="dgogeek.ath.cx"
    ;;
    dev|work)
      server="robert-dev"
    ;;
    live)
      server="robertcarpenter.net"
    ;;
    beta)
      server="beta"
    ;;
    local)
      server="10.10.7.47"
    ;;
  esac

  user="robert"

  if [ -n "$2" ]; then
    user="$2"
  fi

  opts="-AX"

  if [ -n "$3" ]; then
    opts="$3"
  fi

  ssh $opts $user@$server
}

