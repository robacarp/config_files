echo -e "\tAliasing"
alias l="\ls"
alias ll="\ls -l -G"
alias ls="\ls -la -G"
alias md="mkdir"
alias r="rails"
alias rs="rails server --debug"
alias rc="rails console --debug"
alias ack="ack-grep"
alias g="git"
alias gs="git status"
alias irc="irssi"
alias go="ssh"

echo -e "\tDefining Functions"
cs () { cd $1 && ls; }

PS1='\[\e]0;\u@\h: \w\a\]\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]\$ '


name=`uname`
case $name in
  Darwin)
    echo -e "\tOSX aliasing"
    alias mvim="open /Applications/MacVim.app --args $1"
  ;;
  Linux) echo -e "\tNo Linux specific aliases" ;;
  *) echo 'Unknown' ;;
esac

hostname=`hostname`
echo -e "\tstarting screen"
screen -x

vib() {
  if test -w $1; then
    vim $1
  else
    sudo vim $1
  fi
}

[[ -s "/Users/robert/.rvm/scripts/rvm" ]] && source "/Users/robert/.rvm/scripts/rvm"
