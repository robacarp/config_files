echo -e "\tAliasing"
alias l="\ls"
alias ll="\ls -l"
alias ls="\ls -la"
alias md="mkdir"
alias r="rails"
alias ack="ack-grep"
alias g="git"
alias gs="git status"

echo -e "\tDefining Functions"
cs () { cd $1; ls; }

PS1='\h:\W \u\$ '

name=`uname`
case $name in
  Darwin)
    echo -e "\tOSX aliasing"
    alias mvim="open /Applications/MacVim.app --args $1"
  ;;
  Linux) echo -e "\tNo Linux specific aliases" ;;
  *) echo 'Unknown' ;;
esac

hostname=`hostname`
echo -e "\tstarting screen"
screen -x

go () {
 case "$1" in
    home     ) server="dgogeek.ath.cx" ;;
    dev|work ) server="robert-dev" ;;
    live     ) server="robertcarpenter.net" ;;
    liver    ) server="173.255.193.199" ;;
    beta     ) server="beta" ;;
    local    ) server="doulos" ;;
    desktop  ) server="192.168.0.86" ;;
    list     ) 
      echo "home dev live beta local desktop list";
      return 0;
    ;;
  esac

  user="robert"
  if [ -n "$2" ]; then
    user="$2"
  fi

  opts="-AX"
  if [ -n "$3" ]; then
    opts="$3"
  fi

  echo "ssh $opts $user@$server"
  ssh $opts $user@$server
}

vib() {
  if test -w $1; then
    vim $1
  else
    sudo vim $1
  fi
}

